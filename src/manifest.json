{
  "manifest_version": 2,
  "name": "GIFDragon",
  "version": "0.1.1",
  "description": "GIF manager",
  "applications": {
    "gecko": {
      "id": "gifdragon@mkelly.me"
    }
  },
  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },
  "background": {
    "scripts": ["Category.js", "background.js"]
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "icon.svg",
    "default_title": "GIFDragon",
    "default_popup": "popup.html"
  },
  "permissions": [
    "menus",
    "storage",
    "unlimitedStorage"
  ]
}
